<h1>New Question:</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="question">Question</label>
      {{input value=question id="question"}}
    </div>

    <div class="form-group">
      <label for="notes">Notes</label>
      {{input value=notes id="notes"}}
    </div>

    <button {{action 'save1'}}>Ask Question</button>
  </form>
</div>